    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center">
      <div class="container">
        <div class="row">
          <div
            class="col-lg-6 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <center>
              <h1>Register a College</h1>
              <form style="width: 70%" method="POST" action="/add_college">
                <div class="form-row">
                  <div class="form-group col-md-4">
                    <label for="collegeID">College Id</label>
                    <input
                      type="text"
                      class="form-control"
                      id="collegeID"
                      name="collegeID"
                      placeholder="MAIT"
                      required
                    />
                  </div>
                  <div class="form-group col-md-8">
                    <label for="Type">College Type</label>
                    <select id="Type" name="Type" class="form-control">
                      <option value="central">Central Universities</option>
                      <option value="state">State Universities</option>
                      <option value="deemed">Deemed-to-be Universities</option>
                      <option value="private">Private Universities</option>
                      <option value="autonomous">Autonomous Colleges</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label for="college_fullname">College Full Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="college_fullname"
                    name="college_fullname"
                    placeholder="Maharaja Agrasen Insitute of Technology"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="address">College Address</label>
                  <input
                    type="text"
                    class="form-control"
                    id="address"
                    name="address"
                    placeholder="Enter the complete Address"
                    required
                  />
                </div>
                <label>Enter college Coordinates</label>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="Type">Latitude</label>
                    <input 
                      type="number" 
                      class="form-control" 
                      id="latitude" 
                      name="latitude" 
                      step="any"
                      placeholder="28.60957" />
                  </div>
                  <div class="form-group col-md-6">
                    <label for="Type">Longitude</label>
                    <input 
                      type="number" 
                      class="form-control" 
                      id="longitude" 
                      name="longitude"
                      step="any" 
                      placeholder="77.03527" />
                  </div>
                </div>
                
                <button type="submit" class="btn btn-info">
                  Add to Database
                </button>
              </form>
            </center>
