    <script>
      const q_subject = document.getElementById("q_subject");
      const query_list_table_body = document.getElementById("query_list");

      q_subject.addEventListener("keyup", () => {
        var filter, table, tr, td, i, txtValue;
        var q_label = document.getElementById("q_label").value;

        if (q_label !== "None") {
          filter = q_subject.value.toUpperCase();
          filter_2 = q_label.toUpperCase();
          tr = query_list_table_body.getElementsByTagName("tr");
          for (i = 0; i < tr.length; i++) {
            temp_query = tr[i].getElementsByTagName("td")[1];

            if (temp_query) {
              txtValue = temp_query.textContent || temp_query.innerText;
              temp_query_2 = tr[i].getElementsByTagName("th")[0];
              txtValue_2 = temp_query_2.textContent || temp_query_2.innerText;

              if (
                txtValue.toUpperCase().indexOf(filter) > -1 &&
                txtValue_2.toUpperCase().indexOf(filter_2) > -1
              ) {
                tr[i].style.display = "";
              } else {
                tr[i].style.display = "none";
              }
            }
          }
        } else {
          filter = q_subject.value.toUpperCase();
          tr = query_list_table_body.getElementsByTagName("tr");
          for (i = 0; i < tr.length; i++) {
            temp_query = tr[i].getElementsByTagName("td")[1];

            if (temp_query) {
              txtValue = temp_query.textContent || temp_query.innerText;

              if (txtValue.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
              } else {
                tr[i].style.display = "none";
              }
            }
          }
        }
      });

      function filterByLabel() {
        var q_label = document.getElementById("q_label").value;

        if (q_label !== "None") {
          var filter, table, tr, td, i, txtValue;
          filter = q_label.toUpperCase();
          filter_2 = q_subject.value.toUpperCase();
          tr = query_list_table_body.getElementsByTagName("tr");
          for (i = 0; i < tr.length; i++) {
            temp_query = tr[i].getElementsByTagName("th")[0];
            temp_query_2 = tr[i].getElementsByTagName("td")[1];
            if (temp_query) {
              txtValue = temp_query.textContent || temp_query.innerText;
              txtValue_2 = temp_query_2.textContent || temp_query_2.innerText;

              if (
                txtValue.toUpperCase().indexOf(filter) > -1 &&
                txtValue_2.toUpperCase().indexOf(filter_2) > -1
              ) {
                tr[i].style.display = "";
              } else {
                tr[i].style.display = "none";
              }
            }
          }
        } else {
          filter = q_subject.value.toUpperCase();
          tr = query_list_table_body.getElementsByTagName("tr");
          for (i = 0; i < tr.length; i++) {
            temp_query = tr[i].getElementsByTagName("td")[1];

            if (temp_query) {
              txtValue = temp_query.textContent || temp_query.innerText;

              if (txtValue.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
              } else {
                tr[i].style.display = "none";
              }
            }
          }
        }
      }
    </script>
     <% let query = data; %>
     
    <script>let curr = {}; let ans = {};</script>

   <% for(var i=0; i < query.length ; i++ ) { %>

    <script>
       curr = ("<%= query[i].label %>")
      if(curr in  ans) {
        ans[curr] += 1
      } else {
        ans[curr] = 1;
      }

    </script>
      
   <% } %>

    <script>
      if(ans !== null) {

          let keys = []
          let values = []
          for (const key of Object.keys(ans)) {
              keys.push(key)
            }
          for (const value of Object.values(ans)) {
                values.push(value)
            }

        var data = [{
            values,
            labels: keys,
            domain: {column: 0},
            name: 'Queries',
            hoverinfo: 'label+percent+name',
            hole: .5,
            type: 'pie'
          }];

            var layout = {
              title: `Pending Queries ${new Date().getFullYear()}`,
              annotations: [
                {
                  font: {
                    size: 20
                  },
                  showarrow: false,
                  text: 'Queries',
                  x: 0.50,
                  y: 0.5
                },
              ],
              height: 400,
              width: 600,
              showlegend: true,
              grid: {rows: 1, columns: 1}
            };
            Plotly.newPlot('pie', data, layout, {displayModeBar: false});
          } else {
             document.getElementById('msg').style.visibility="visible";
          }
    </script>
