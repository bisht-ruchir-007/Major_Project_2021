                <td>
                  <%= new Date(data[i].date).toLocaleString("en-IN", {day:
                  '2-digit',month: '2-digit', year: 'numeric',hour: '2-digit',
                  minute:'2-digit'})%>
                </td>
                <td><%= data[i].subject %></td>
                <td><a href="/query?id=<%= data[i].id%>">Open</a></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <br />
