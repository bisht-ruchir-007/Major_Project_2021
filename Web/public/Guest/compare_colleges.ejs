    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>
    <script>
      function Compare(){
        let cllg1 = document.getElementById("input_college_1").value;
        let cllg2 = document.getElementById("input_college_2").value;

        // to check if colleges selected to compare are valid and different 
        
        let isValid = true , isSame = false;

        if( cllg1 == "" || cllg2 == ""){
            isValid = false;
        }
        else if(cllg1 == cllg2){
            isSame = true;
        }
        // console.log(isValid);
        // console.log(isSame);

        if(isValid && !isSame){
            document.getElementById("block_error").innerText = "";
            let Compare_form = document.getElementById("compare_form");
            Compare_form.submit();
        }else if(isSame){
           document.getElementById("block_error").innerText = "Inputs have same selected option !!!";
        }else{
           document.getElementById("block_error").innerText = "Inputs selected are Empty !!!";
        }
      }
    </script>

  </body>
