    <!-- End Header -->


    <main id="main">
        <section id="hero" class="d-flex align-items-center">
            <div class="container">
              <div class="row">
                <div
                  class="col-lg-6 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1"
                  data-aos="fade-up"
                  data-aos-delay="200"
                >
                  <h1>
                    Compare Colleges 
                  </h1>
                  <h2>Compare colleges based on various paramters like Rating , Location , Type etc.</h2>
                </div>
                <div
                  class="col-lg-6 order-1 order-lg-2 hero-img"
                  data-aos="zoom-in"
                  data-aos-delay="200"
                >
                  <img
                    src="assets/img/hero-img.png"
                    class="img-fluid animated"
                    alt=""
                  />
                </div>
              </div>
            </div>
          </section>
     
      <section id="about" class="about">
        <div class="container" data-aos="fade-up">
          <div class="section-title">
            <h2>Fill-up the relevent fields.</h2>
            <h4 id="block_error" style="color: red"></h4>
          </div>

          <center>
           <form id="compare_form" method="POST" action="/compare_result" >
            <div class="row g-3">
                <div class="col">
                    <div class="form-group">
                        <label for="input_college_1" style="color: black">Select College No. 1 </label>
                        <select class="form-control" id="input_college_1" name="input_college_1">
                          <option value="">Select a college</option>
                          <% for(var i=0; i < data.length ; i++ ) { %>
                            <option value="<%=data[i].CollegeName%>"><%= data[i].CollegeName %></option>
                          <% } %>
                        </select>
                      </div>
                </div>          
                <div class="col">
                    <div class="form-group">
                        <label for="input_college_2" style="color: black">Select College No. 2 </label>
                        <select class="form-control" id="input_college_2" name="input_college_2">
                          <option value="">Select a college</option>
                          <% for(var i=0; i < data.length ; i++ ) { %>
                            <option value="<%=data[i].CollegeName%>"><%= data[i].CollegeName %></option>
                          <% } %>
                        </select>
                      </div>
                </div>
              </div>
            </form>
            <button class="btn btn-success" onClick="Compare()">Compare</button>
       
          </center>
        </div>
      </section>
    </main>

