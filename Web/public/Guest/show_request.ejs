<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    <title>Reports Dashboard</title>

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon" />
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
      rel="stylesheet"
    />

    <!-- Vendor CSS Files -->
    <link
      href="assets/vendor/bootstrap/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="assets/vendor/icofont/icofont.min.css" rel="stylesheet" />
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="assets/vendor/venobox/venobox.css" rel="stylesheet" />
    <link
      href="assets/vendor/owl.carousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />
    <link href="assets/vendor/aos/aos.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="assets/css/style.css" rel="stylesheet" />

    <style>
      td,
      th {
        text-align: center;
      }
    </style>
  </head>

  <body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
      <div class="container d-flex align-items-center">
        <h1 class="logo mr-auto"><a href="index.html">E-Survey</a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html" class="logo mr-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

        <nav class="nav-menu d-none d-lg-block">
          <ul class="dropdown show">
            <li><a href="/guest_home">Home</a></li>
            <li><a href="/guest_profile">My Profile</a></li>
            <li><a href="/guest_search">Search Colleges</a></li>
            <li><a href="/compare_colleges">Compare Colleges</a></li>
            <li class="drop-down">
              <a href="#">Services</a>
              <ul>
                <li>
                  <a href="/submit_request">Submit Query (Anonymously)</a>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
        <!-- .nav-menu -->
        <form action="/guest_logout" method="POST" style="margin-left: 1%">
          <button class="btn btn-sm btn-danger" type="submit">Logout</button>
        </form>
      </div>
    </header>
    <!-- End Header -->

    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center">
      <div class="container">
        <div class="row">
          <div
            class="
              col-lg-6
              d-flex
              flex-column
              justify-content-center
              pt-4 pt-lg-0
              order-2 order-lg-1
            "
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <h1>Your Queries</h1>
          </div>
          <div
            class="col-lg-6 order-1 order-lg-2 hero-img"
            data-aos="zoom-in"
            data-aos-delay="200"
          >
            <img
              src="assets/img/hero-img.png"
              class="img-fluid animated"
              alt=""
            />
          </div>
        </div>
      </div>
    </section>
    <!-- End Hero -->

    <main>
      <!-- ======= About Us Section ======= -->
      <section id="about" class="about">
        <div class="container" data-aos="fade-up">
          <center>
            <div class="section-title">
              <% if ( pending > 0 || rejected > 0 || approved >0) { %>
              <h2>List of All Queries</h2>
              <div class="row">
                <div class="col-sm-4">
                  <div class="card border-info" style="max-width: 18rem">
                    <div class="card-header bg-info text-light">
                      <h3>Pending Queries</h3>
                    </div>
                    <div class="card-body">
                      <h4 class="card-title">
                        Live Count :
                        <b style="color: lightseagreen"><%= pending%></b>
                      </h4>
                      <p class="card-text pb-2">
                        List of all the queries that were send to Admin.
                      </p>

                      <a href="/pending_request" class="btn btn-outline-info"
                        >Show</a
                      >
                    </div>
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="card border-success" style="max-width: 18rem">
                    <div class="card-header bg-success text-light">
                      <h3>Approved Queries</h3>
                    </div>
                    <div class="card-body">
                      <h4 class="card-title">
                        Live Count : <b style="color: green"><%= approved%></b>
                      </h4>
                      <p class="card-text pb-2">
                        List of all the queries that were approved by Admin.
                      </p>
                      <a
                        href="/approved_request"
                        class="btn btn-outline-success"
                        >Show</a
                      >
                    </div>
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="card border-danger" style="max-width: 18rem">
                    <div class="card-header bg-danger text-light">
                      <h3>Rejected Queries</h3>
                    </div>
                    <div class="card-body">
                      <h4 class="card-title">
                        Live Count :
                        <b style="color: red"><%= rejected%></b>
                      </h4>
                      <p class="card-text pb-2">
                        List of all the queries that were rejected by Admin.
                      </p>
                      <a href="/rejected_request" class="btn btn-outline-danger"
                        >Show</a
                      >
                    </div>
                  </div>
                </div>
              </div>
              <% } %> <% if ( pending ==0 && rejected ==0 && approved ==0) { %>
              <h2>No Queries found.</h2>
              <p>
                Want to submit a new query ?
                <a href="/submit_request">Click here</a>
              </p>
              <center>
                <div class="container p-3">
                  <img src="../assets/img/empty.png"/ style="height: 300px;">
                </div>
              </center>
              <% } %>
            </div>
          </center>
        </div>
      </section>
    </main>

    <footer id="footer">
      <div class="container footer-bottom clearfix">
        <div class="copyright">
          &copy; Copyright <strong><span>Team MAIT</span></strong
          >. All Rights Reserved
        </div>
        <div class="credits">Project By <a href="#">TEAM CSEIP19</a></div>
      </div>
    </footer>
    <!-- End Footer -->

    <a href="#" class="back-to-top"><i class="ri-arrow-up-line"></i></a>
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/jquery/jquery.min.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>
    <script src="assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/venobox/venobox.min.js"></script>
    <script src="assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>
  </body>
</html>
